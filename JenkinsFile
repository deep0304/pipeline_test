pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                // Adjust the repo URL if needed (or remove if Jenkins already checks out code)
                git url: 'https://github.com/deep0304/pipeline_test.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo 'Starting Build...'
                bat 'build.bat'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Tests...'
                bat 'test.bat'
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging the Application...'
                bat 'package.bat'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the Application...'
                bat 'deploy.bat'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished running.'
        }

        success {
            echo 'Pipeline completed successfully! üéâ'
        }

        failure {
            echo 'Pipeline failed. ‚ùå'
        }

        unstable {
            echo 'Pipeline is unstable. ‚ö†Ô∏è'
        }

        changed {
            echo 'Pipeline result changed from last run.'
        }
    }
}
