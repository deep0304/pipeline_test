pipeline {
    agent none  // Delegate agents per stage

    stages {
        stage('Windows - Script Repo') {
            agent { label 'Windows_agent' }
            steps {
                echo 'Cloning Script Project on Windows Node...'
                git url: 'https://github.com/deep0304/pipeline_test.git', branch: 'main'

                bat 'build.bat'
                bat 'test.bat'
                bat 'package.bat'
                bat 'deploy.bat'
            }
        }

        stage('Linux - Maven Project') {
            agent { label 'linux_node' }
            steps {
                echo 'Cloning Maven Project on Linux Node...'
                git url: 'https://github.com/deep0304/hello_repo.git', branch: 'main'

                echo 'Building Java program...'
                sh 'javac Hello.java'

                echo 'Running Java program...'
                sh 'java Hello'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished running.'
        }
        success {
            echo '✅ Pipeline succeeded.'
        }
        failure {
            echo '❌ Pipeline failed.'
        }
    }
}
